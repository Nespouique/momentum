{
  "name": "momentum",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @momentum/api\" \"npm run dev -w @momentum/web\"",
    "dev:api": "npm run dev -w @momentum/api",
    "dev:web": "npm run dev -w @momentum/web",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:start": "docker compose -f docker/docker-compose.dev.yml up -d",
    "db:stop": "docker compose -f docker/docker-compose.dev.yml down",
    "db:reset": "docker compose -f docker/docker-compose.dev.yml down -v && docker compose -f docker/docker-compose.dev.yml up -d"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
