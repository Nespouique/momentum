# Momentum - Production Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Docker Hub Settings
# ===================
# Your DockerHub username (images: nespouique/momentum-web, nespouique/momentum-api)
DOCKERHUB_USERNAME=nespouique
TAG=latest

# ===================
# Database
# ===================
# Strong password for PostgreSQL (min 16 characters recommended)
DB_PASSWORD=your-secure-database-password-here

# ===================
# Authentication
# ===================
# JWT secret key (min 32 characters, generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# ===================
# URLs
# ===================
# Frontend URL (used for CORS configuration)
FRONTEND_URL=https://momentum.yourdomain.com
