# Stage 1: Builder (single stage to avoid node_modules sync issues)
FROM node:20-alpine AS builder
WORKDIR /app

# Copy all source files first
COPY . .

# Install dependencies (npm will create proper node_modules structure)
# --ignore-scripts to skip postinstall (prisma generate) since we don't need it for web
RUN npm ci --ignore-scripts

# Disable telemetry and build
ENV NEXT_TELEMETRY_DISABLED=1
RUN npm run build --workspace=@momentum/web

# Stage 2: Runner
FROM node:20-alpine AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy standalone output
COPY --from=builder /app/apps/web/.next/standalone ./
COPY --from=builder /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=builder /app/apps/web/public ./apps/web/public

# Set ownership
RUN chown -R nextjs:nodejs /app

USER nextjs

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

CMD ["node", "apps/web/server.js"]
